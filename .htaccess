RewriteEngine on
	
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^/               	     	 	      /index.php [L]
RewriteRule ^home               	 	 	      /index.php?acao=login [L]
RewriteRule logoff               	 		      /index.php?acao=logoff

RewriteRule ^arquivos/cadastrar       	 	      /index.php?acao=cadastro&modulo=Arquivos
RewriteRule ^cadastrar/arquivo        	 	      /index.php?acao=cadastrar&modulo=Arquivos
RewriteRule ^arquivos/ativos          		      /index.php?acao=lista&modulo=Arquivos&status=ATIVO
RewriteRule ^arquivos/inativos        	          /index.php?acao=lista&modulo=Arquivos&status=INATIVO
RewriteRule ^editar/arquivo/(.*)/(.*)/(.*)        /index.php?acao=editar&modulo=Arquivos&operacao=$1&id=$2&status=$3
RewriteRule ^excluir/arquivo/(.*)/(.*)            /index.php?acao=excluir&modulo=Arquivos&id=$1&anexo=$2
 
RewriteRule ^servidores/cadastrar                 /index.php?acao=cadastro&modulo=Servidores
RewriteRule ^cadastrar/servidor               	  /index.php?acao=cadastrar&modulo=Servidores
RewriteRule ^servidores/editar/(.*)               /index.php?acao=edicao&tipo=info&modulo=Servidores&id=$1
RewriteRule ^servidores/senha/                    /index.php?acao=edicao&tipo=senha&modulo=Servidores&id=$1
RewriteRule ^servidores/foto/                     /index.php?acao=edicao&tipo=foto&modulo=Servidores&id=$1
RewriteRule ^editar/servidor/(.*)/(.*)/(.*)       /index.php?acao=editar&modulo=Servidores&operacao=$1&id=$2&status=$3
RewriteRule ^servidores/ativos                    /index.php?acao=lista&modulo=Servidores&status=ATIVO
RewriteRule ^servidores/inativos                  /index.php?acao=lista&modulo=Servidores&status=INATIVO

RewriteRule ^chamados/visualizar/(.*)             /index.php?acao=visualizar&modulo=Chamados&id=$1
RewriteRule ^chamados/cadastrar                   /index.php?acao=cadastro&modulo=Chamados
RewriteRule ^cadastrar/chamado            	      /index.php?acao=cadastrar&modulo=Chamados
RewriteRule ^editar/chamado/(.*)/(.*)/(.*)  	  /index.php?acao=editar&modulo=Chamados&operacao=$1&id=$2&status=$3
RewriteRule ^chamados/ativos                      /index.php?acao=lista&modulo=Chamados&status=ATIVO
RewriteRule ^chamados/inativos                    /index.php?acao=lista&modulo=Chamados&status=INATIVO
RewriteRule ^excluir/chamado/(.*)                 /index.php?acao=excluir&modulo=Chamados&id=$1

RewriteRule ^comunicacao/ativos                   /index.php?acao=lista&modulo=Comunicacao&status=ATIVO
RewriteRule ^comunicacao/inativos                 /index.php?acao=lista&modulo=Comunicacao&status=INATIVO
RewriteRule ^comunicacao/cadastrar                /index.php?acao=cadastro&modulo=Comunicacao
RewriteRule ^cadastrar/comunicacao                /index.php?acao=cadastrar&modulo=Comunicacao
RewriteRule ^comunicacao/visualizar/(.*)          /index.php?acao=visualizar&modulo=Comunicacao&id=$1
RewriteRule ^editar/comunicacao/(.*)/(.*)/(.*)    /index.php?acao=editar&modulo=Comunicacao&operacao=$1&id=$2&status=$3
RewriteRule ^excluir/comunicacao/(.*)             /index.php?acao=excluir&modulo=Chamados&id=$1
RewriteRule ^comunicacao/editar/(.*)              /index.php?acao=edicao&tipo=info&modulo=Comunicacao&id=$1

 

